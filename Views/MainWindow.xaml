<Window x:Class="ZenDesk.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZenDesk.Views"
        xmlns:viewmodels="clr-namespace:ZenDesk.ViewModels"
        mc:Ignorable="d"
        Title="ZenDesk 控制中心" Height="360" Width="320" 
        WindowStyle="None" AllowsTransparency="True" Background="Transparent" 
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <viewmodels:MainViewModel />
    </Window.DataContext>

    <!-- Placeholder for Mica and Custom Titlebar -->
    <Border Background="#A0000000" CornerRadius="16" BorderBrush="#30FFFFFF" BorderThickness="1" Margin="20">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="25" Opacity="0.6" Direction="270" ShadowDepth="8" />
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Height="40" Background="Transparent" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="ZenDesk" Foreground="#D0FFFFFF" FontWeight="Light" FontSize="14" VerticalAlignment="Center" Margin="16,0" IsHitTestVisible="False"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,8,0">
                        <Button Content="—" Width="36" Height="28" Background="Transparent" BorderThickness="0" FontSize="10" Click="Minimize_Click"/>
                        <Button Content="✕" Width="36" Height="28" Background="Transparent" BorderThickness="0" FontSize="14" Click="Close_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Control Panel -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="30,0,30,20">
                <TextBlock Text="控制面板" FontSize="26" FontWeight="Light" Foreground="White" Margin="0,0,0,30" HorizontalAlignment="Center"/>
                
                <Button Content="唤醒桌面收纳盒" Height="40" Click="LoadContainers_Click" Margin="0,0,0,15"/>
                <Button Content="重新智能归类" Height="40" Click="Classify_Click" Margin="0,0,0,15"/>
                <Button Content="完全退出程序" Height="40" Click="ExitApp_Click" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
