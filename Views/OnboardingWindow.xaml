<Window x:Class="ZenDesk.Views.OnboardingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ZenDesk Guide" 
        Width="800" Height="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        FontFamily="Segoe UI Light, Microsoft YaHei Light, sans-serif">

    <Border Background="#C0000000" CornerRadius="16" BorderBrush="#30FFFFFF" BorderThickness="1" Margin="20">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" Opacity="0.5" Direction="270" ShadowDepth="10" />
        </Border.Effect>
        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Phase 1: Breathe -->
                <TextBlock Text="你的桌面，不应是文件的收容所。" 
                           Foreground="White" FontSize="32" FontWeight="Light" 
                           HorizontalAlignment="Center" Margin="0,0,0,40" Opacity="0.9"/>

                <TextBlock Text="双击屏幕任意空白处，找回掌控感。" 
                           Foreground="#A0FFFFFF" FontSize="16" FontWeight="Light" 
                           HorizontalAlignment="Center" Margin="0,0,0,50" Opacity="0.7"/>

                <Button Content="开启数字空间" Width="180" Height="44" 
                        Background="#20FFFFFF" Foreground="White" 
                        BorderBrush="#40FFFFFF" BorderThickness="1"
                        FontSize="15" Cursor="Hand" Click="CloseButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
